---
import HeaderLink from './HeaderLink.astro';
import Search from './Search';
import { SITE_TITLE } from '../consts';
---

<header class="fixed top-0 left-0 right-0 z-50 glass transition-all duration-300">
	<nav class="mx-auto flex h-16 max-w-4xl items-center justify-between px-4 sm:px-6 lg:px-8">
		<h2 class="text-lg font-semibold tracking-tight text-gray-900">
			<a href="/" class="transition-opacity hover:opacity-70">{SITE_TITLE}</a>
		</h2>
		<div class="flex items-center gap-4 sm:gap-6 text-sm">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<Search client:load />
		</div>
	</nav>
</header>
<div class="h-16"></div>
