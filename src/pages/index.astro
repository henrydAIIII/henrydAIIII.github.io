---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Calendar from '../components/Calendar';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets';

const allPosts = await getCollection('blog');
const posts = allPosts.sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 3); // Only show latest 3 posts

// Calendar data preparation
const postsByDateMap = allPosts.reduce((acc, post) => {
    const dateStr = post.data.pubDate.toISOString().split('T')[0];
    if (!acc[dateStr]) {
        acc[dateStr] = [];
    }
    acc[dateStr].push({
        title: post.data.title,
        slug: post.id
    });
    return acc;
}, {} as Record<string, Array<{title: string, slug: string}>>);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gray-50 text-gray-900 antialiased flex flex-col min-h-screen">
		<Header />
		<main class="flex-grow w-full">
            <!-- Hero Section -->
            <section class="relative overflow-hidden py-24 sm:py-32 lg:pb-40">
                <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center animate-fade-in-up">
                    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl mb-6">
                        I told you, I can totally be a millionaire
                    </h1>
                    <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-gray-600">
                        Sharing my thoughts on technology, design, and life. Simple, clean, and focused on content.
                    </p>
                    <div class="mt-10 flex items-center justify-center gap-x-6">
                        <a href="/blog" class="rounded-full bg-gray-900 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900 transition-all duration-300 hover:scale-105">
                            Read the Blog
                        </a>
                        <a href="/about" class="text-sm font-semibold leading-6 text-gray-900 hover:text-gray-600 transition-colors">
                            Learn more <span aria-hidden="true">â†’</span>
                        </a>
                    </div>
                </div>
            </section>

            <!-- Activity Calendar Section -->
            <section class="mx-auto max-w-7xl px-6 lg:px-8 pb-16">
                <Calendar client:visible postsByDate={postsByDateMap} />
            </section>

            <!-- Latest Posts Section -->
            <section class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 pb-24">
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-2xl font-bold tracking-tight text-gray-900">Latest Posts</h2>
                    <a href="/blog" class="text-sm font-semibold text-blue-600 hover:text-blue-500">View all posts &rarr;</a>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {
                        posts.map((post) => (
                            <article class="flex flex-col overflow-hidden rounded-2xl bg-white shadow-sm transition-all duration-300 hover:shadow-xl hover:-translate-y-1 group border border-gray-100">
                                <a href={`/blog/${post.id}/`} class="block overflow-hidden aspect-[16/9]">
                                    {post.data.heroImage ? (
                                        <Image width={720} height={360} src={post.data.heroImage} alt="" class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105" />
                                    ) : (
                                        <div class="h-full w-full bg-gray-100 flex items-center justify-center text-gray-300">
                                            No Image
                                        </div>
                                    )}
                                </a>
                                <div class="flex flex-1 flex-col p-6">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-4 text-sm font-medium text-blue-600">
                                            <FormattedDate date={post.data.pubDate} />
                                            {post.data.location && (
                                                <span class="flex items-center gap-1 text-gray-500 font-normal">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                                        <circle cx="12" cy="10" r="3"></circle>
                                                    </svg>
                                                    {post.data.location}
                                                </span>
                                            )}
                                        </div>
                                        <a href={`/blog/${post.id}/`} class="mt-2 block">
                                            <p class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">{post.data.title}</p>
                                            <p class="mt-3 text-base text-gray-500 line-clamp-3">{post.data.description}</p>
                                        </a>
                                    </div>
                                    {post.data.tags && (
                                        <div class="mt-6 flex flex-wrap gap-2">
                                            {post.data.tags.map(t => (
                                                <a href={`/tags/${t}`} class="inline-flex items-center rounded-full bg-gray-50 px-2.5 py-0.5 text-xs font-medium text-gray-600 hover:bg-gray-100">
                                                    #{t}
                                                </a>
                                            ))}
                                        </div>
                                    )}
                                </div>
                            </article>
                        ))
                    }
                </div>
            </section>
		</main>
		<Footer />
	</body>
</html>
